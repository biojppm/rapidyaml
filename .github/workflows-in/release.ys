        #- {pythonv: '3.9' , cibw_pyv: 39 , cibw_arch: x86_64,
        #   cibw_platform: macosx_x86_64, osname: macos, os: macos-10.15}
        #- {pythonv: '3.8' , cibw_pyv: 38 , cibw_arch: x86_64,
