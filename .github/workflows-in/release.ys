        #   cmakeflags: '-G "Visual Studio 16 2019" -A x64'}
        #- {pythonv: '3.6' , cibw_pyv: 36 , cibw_arch: x86   ,
        #   cibw_platform: win32    , osname: win  , os: windows-2019,
